@model IEnumerable<QUANLYBANHANGMVC_FRONTEND.Models.ViewModels.SanPhamViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách sản phẩm</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Ảnh
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Masanpham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tensanpham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dongia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soluong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hinhanh)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Masanpham">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Masanpham">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Masanpham">Delete</a>
                    </td>
                 </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No products available.</td>
            </tr>
        }
    </tbody>
</table>
