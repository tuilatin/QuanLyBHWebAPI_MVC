<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QUANLYBANHANGMVC_FRONTEND</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QUANLYBANHANGMVC_FRONTEND.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Header -->
    <header>
        <div class="container">
            <nav>
                <a href="#" class="logo">🛍️ ShopOnline</a>
                <ul class="nav-links">
                    <li><a href="#home">Trang chủ</a></li>
                    <li><a href="#products">Sản phẩm</a></li>
                    <li><a href="#deals">Khuyến mãi</a></li>
                    <li><a href="#contact">Liên hệ</a></li>
                    <li>
                        @if (string.IsNullOrEmpty(Context.Session.GetString("JWTToken")))
                        {
                            <!-- Chưa đăng nhập -->
                            <a asp-controller="Account" asp-action="Login" class="btn-login">Đăng nhập</a>
                        }
                        else
                        {
                            <!-- Đã đăng nhập -->
                            @* <a asp-controller="Account" asp-action="Logout" class="btn-login">Đăng xuất</a> *@
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn-login">Đăng xuất</button>
                            </form>
                        }
                    </li>

                    <li>
                        @if (string.IsNullOrEmpty(Context.Session.GetString("JWTToken")))
                        {
                            <!-- Chưa login thì mới cho đăng ký -->
                            <a asp-controller="Account" asp-action="Register" class="btn-login">Đăng ký</a>
                        }
                    </li>

                    <li class="cart-icon">
                        🛒
                        <span class="cart-count">0</span>
                    </li>
                </ul>
            </nav>
            <div class="search-bar">
                <input type="text" placeholder="Tìm kiếm sản phẩm...">
                <button>Tìm kiếm</button>
            </div>
        </div>
    </header>

  
    <section class="products" id="products">
        <div class="container">
            @* <h2 class="section-title">Sản Phẩm Nổi Bật</h2> *@
           
            <div class="product-grid">
                @RenderBody()
           
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="features">
        <div class="container">
            <h2 class="section-title">Tại Sao Chọn Chúng Tôi?</h2>
            <div class="feature-grid">
                <div class="feature-card">
                    <div class="feature-icon">🚚</div>
                    <h3 class="feature-title">Miễn Phí Vận Chuyển</h3>
                    <p>Giao hàng miễn phí cho đơn hàng trên 500.000đ</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">💳</div>
                    <h3 class="feature-title">Thanh Toán An Toàn</h3>
                    <p>Nhiều phương thức thanh toán tiện lợi</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">🔄</div>
                    <h3 class="feature-title">Đổi Trả Dễ Dàng</h3>
                    <p>Đổi trả trong vòng 30 ngày</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">⭐</div>
                    <h3 class="feature-title">Chất Lượng Đảm Bảo</h3>
                    <p>Sản phẩm chính hãng 100%</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-section">
                    <h3>Về Chúng Tôi</h3>
                    <ul>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Hệ thống cửa hàng</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Chính Sách</h3>
                    <ul>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Điều khoản sử dụng</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Chính sách vận chuyển</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Hỗ Trợ</h3>
                    <ul>
                        <li><a href="#">Trung tâm trợ giúp</a></li>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                        <li><a href="#">Câu hỏi thường gặp</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Liên Hệ</h3>
                    <ul>
                        <li>📧 support@shoponline.vn</li>
                        <li>📞 1900-xxxx</li>
                        <li>📍 Hà Nội, Việt Nam</li>
                        <li>🕐 8:00 - 22:00 hàng ngày</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 ShopOnline. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <script>
        // Hiệu ứng smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Hiệu ứng thêm vào giỏ hàng
        document.querySelectorAll('.btn-add-cart').forEach(button => {
            button.addEventListener('click', function() {
                const cartCount = document.querySelector('.cart-count');
                let count = parseInt(cartCount.textContent);
                cartCount.textContent = count + 1;

                this.textContent = '✓ Đã thêm';
                this.style.background = '#27ae60';

                setTimeout(() => {
                    this.textContent = 'Thêm vào giỏ';
                    this.style.background = '';
                }, 2000);
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
